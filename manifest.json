{
    "name": "microblog.pub",
    "id": "microblogpub",
    "packaging_format": 1,
    "description": {
        "en": "A self-hosted, single-user, ActivityPub powered microblog."
    },
    "version": "2.0.0-rc.7~ynh1",
    "url": "https://git.sr.ht/~tsileo/microblog.pub-ynh",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://docs.microblog.pub",
        "demo": "https://microblog.pub",
        "userdoc": "https://docs.migroblog.pub",
        "code": "https://git.sr.ht/~tsileo/microblog.pub"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "Thomas Sileo",
        "email": "t@a4.io"
    },
    "requirements": {
        "yunohost": ">= 11.0.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "username",
                "type": "string",
                "ask": {"en": "Choose your username, your handle will be @username@domain"}
            },
            {
                "name": "name",
                "type": "string",
                "ask": {"en": "Your display name"}
            },
            {
                "name": "summary",
                "type": "string",
                "ask": {"en": "Your profile summary/bio (markdown is supported)"}
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}
